<div class="ui container">
  <div class="ui header">
    <h1>Timeline</h1>
    <div class="add_post">
      <div class="ui massive icon input">
        <input type="text" placeholder="Add New Post">
      </div>
    </div>
  </div>
  <div class="ui centered grid">
    <div class="eight wide column">    
      <% @posts.each do |post| %>
        <div class="ui unstackable items">
          <div class="item">
            <div class="image">
                <%= image_tag post.user.bio.avatar.url, class: "ui avatar image" %>
            </div>
            <div class="content">
              <div class="header"> 
                <%= post.user.handle %>
              </div>
              <div class="meta">
                <%= post.content %>
              </div>
              <div class="extra">
                <% if post.user == current_user %>
                  <div class="mini ui button">
                    <%= link_to "edit", edit_post_path(post) %>
                  </div>
                  <div class="mini ui button">
                    <%= link_to "delete", post, method: :delete %>
                  </div>
                <% end %>
                <div class="mini ui button">
                  <%= link_to "Add Comment", new_post_comment_path(post) %>
                </div>
                <div class="mini ui button">
                  <%= link_to "View Comments", post_comments_path(post) %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
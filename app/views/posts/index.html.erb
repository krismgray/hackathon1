<h1>Timeline</h1>
<hr />

<div class="container">
<% @posts.each do |post| %>
  <div class="post">
    <img class="ui avatar image" src="/images/wireframe/square-image.png">
      <span>Author: <%= post.user.handle %></span>
    </br>
      <div class="container">
        Content: <%= post.content %>
        <% if post.user == current_user %>
        <div class="ui button">
          <%= link_to "edit", edit_post_path(post) %>
        </div>s
        <div class="ui button">
          <%= link_to "delete", post, method: :delete %>
        </div>
        <% end %>
        <div class="ui button">
          <%= link_to "Add Comment", new_post_comment_path(post) %>
        </div>
        <div class="ui button">
          <%= link_to "View Comments", post_comments_path(post) %>
        </div>
      </div>
    </div>
<% end %>
<%= link_to "Add New Post", new_post_path %>
</div>


<div class="ui grid">
  <div class="sixteen wide computer eight wide tablet four wide mobile column">

    <h1>Timeline</h1>
    <hr />
    <div class="add_post">
      <div class="ui massive icon input">
        <input type="text" placeholder="Add New Post">
      </div>
    </div>

    <div class="container">
    <% @posts.each do |post| %>
      <div class="ui unstackable items">
        <div class="item">
          <div class="image">
              <img class="ui avatar image" src="">
          </div>
          <div class="content">
            <span>Author: <%= post.user.handle %></span>
            <div class="meta">
              <%= post.content %>
            </div>
            <div class="extra">
              <% if post.user == current_user %>
              <div class="mini ui button">
                <%= link_to "edit", edit_post_path(post) %>
              </div>
              <div class="mini ui button">
                <%= link_to "delete", post, method: :delete %>
              </div>
              <% end %>
              <div class="mini ui button">
                <%= link_to "Add Comment", new_post_comment_path(post) %>
              </div>
              <div class="mini ui button">
                <%= link_to "View Comments", post_comments_path(post) %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

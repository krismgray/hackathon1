<%= stylesheet_link_tag "application" %>
<div class="ui container">
    <%= form_for @post do |f| %>
      <div class="ui form">
        <%= f.label :content %>
        <%= f.text_area :content, required: true, autofocus: true %>
        <%= f.submit nil, class: "ui button primary" %>
    </div>
  <% end %>
</div>

<%= stylesheet_link_tag "application" %>
<div class="ui container">
  <h1 class="ui header"><%= (@post && @post.id) ? 'Edit Post' : "" %></h1>
    <%= form_for @post do |f| %>
      <div class="ui form">
        <%= f.text_field :content, required: true, autofocus: true, placeholder: "Add New Post" %>
        <%= f.submit nil, class: "ui button primary" %>
    </div>
  <% end %>
</div>